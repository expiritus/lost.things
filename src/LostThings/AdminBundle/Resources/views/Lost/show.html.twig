{% extends 'LostThingsAdminBundle::layout.html.twig' %}

{% block body -%}
    <h1>Lost</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Страна</th>
                <td>{{ entity.country }}</td>
            </tr>
            <tr>
                <th>Город</th>
                <td>{{ entity.city }}</td>
            </tr>
            <tr>
                <th>Район или область</th>
                <td>{{ entity.area }}</td>
            </tr>
            <tr>
                <th>Улица</th>
                <td>{{ entity.street }}</td>
            </tr>
            <tr>
                <th>Объект</th>
                <td>{{ entity.thing }}</td>
            </tr>
            <tr>
                <th>Пользовател</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Описание</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Datelost</th>
                <td>{{ entity.dateLost|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ entity.fileName }}</td>
            </tr>
            <tr>
                <th>Datefind</th>
                <td>{{ entity.dateFind|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_lost_') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_lost__edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
